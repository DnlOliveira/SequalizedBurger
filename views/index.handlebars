<div class="row">

  <div class="col-sm-6 col-md-6 col-lg-6" id="burgers">
    <p><h3>Burgers Made</h3></p>
    <ol>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
              <input type="hidden" name="id" type="text" value="{{this.id}}">
              <button type="submit" class="btn btn-danger btn-sm">Devour!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div class="col-sm-6 col-md-6 col-lg-6" id="devoured">
    <p><h3>Burgers Devoured</h3></p>
    <ol>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ol>
  </div>

</div>
